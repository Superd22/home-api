{
  "name": "home-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/home-api/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "main": "apps/home-api/src/main.ts",
        "outputPath": "dist/apps/home-api",
        "outputFileName": "main.js",
        "tsConfig": "apps/home-api/tsconfig.app.json",
        "project": "apps/home-api/package.json",
        "assets": [],
        "esbuildOptions": {},
        "esbuildConfigFile": "apps/home-api/esbuild.config",
        "thirdParty": true,
        "platform": "node"
      },
      "configurations": {
        "development": {
          "minify": false
        },
        "production": {
          "minify": true
        }
      }
    },
    "serve": {
      "executor": "@nrwl/js:node",
      "options": {
        "buildTarget": "home-api:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "home-api:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/home-api/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/home-api/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "container": {
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "engine": "docker",
        "push": true,
        "tags": ["ghcr.io/superd22/home-api/api:latest"],
        "platforms": ["linux/amd64", "linux/arm64"],
        "metadata": {
          "images": ["ghcr.io/superd22/home-api/api"],
          "load": true,
          "tags": [
            "latest",
            "type=schedule",
            "type=ref,event=branch",
            "type=ref,event=tag",
            "type=ref,event=pr",
            "type=sha,prefix=sha-"
          ]
        }
      },
      "dependsOn": ["build:production"]
    }
  },
  "tags": []
}
